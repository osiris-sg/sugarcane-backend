generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id        String          @id @default(cuid())
  chatId    String          @unique
  username  String?
  firstName String?
  lastName  String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  role      SubscriberRole?

  @@index([chatId])
  @@index([role])
}

model PendingVerification {
  id        String   @id @default(cuid())
  chatId    String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([chatId])
}

model NotificationLog {
  id         String   @id @default(cuid())
  type       String
  deviceId   String?
  deviceName String?
  message    String
  recipients Int
  createdAt  DateTime @default(now())

  @@index([type, createdAt])
}

model MaintenanceLogin {
  id         String   @id @default(cuid())
  deviceId   String
  deviceName String
  userId     String?
  userName   String
  pin        String?
  loginType  String
  createdAt  DateTime @default(now())

  @@index([deviceId, createdAt])
  @@index([userId])
  @@index([createdAt])
}

model Group {
  id        String        @id @default(cuid())
  name      String        @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  devices   DeviceGroup[]
  users     User[]
}

model DeviceGroup {
  id        String   @id @default(cuid())
  deviceId  String
  groupId   String
  createdAt DateTime @default(now())
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([deviceId, groupId])
  @@index([deviceId])
  @@index([groupId])
}

model Device {
  id                String         @id @default(cuid())
  deviceId          String         @unique
  deviceName        String
  price             Int
  isActive          Boolean        @default(false)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  location          String?
  driverId          String?        // Legacy single driver field (kept for backward compatibility)
  machineTemp       Float?
  refrigerationTemp Float?
  tempUpdatedAt     DateTime?
  gpsUpdatedAt      DateTime?
  latitude          Float?
  longitude         Float?
  groups            DeviceGroup[]
  drivers           DeviceDriver[] // Many-to-many: multiple drivers can be assigned
  terminalId        String?        // Terminal ID assigned to this device
  tid               String?        // TID for payment terminal
  appVersion        String?        // App version name (e.g., "3.2")
  appVersionCode    Int?           // App version code (e.g., 186777)
  versionUpdatedAt  DateTime?      // When version was last reported
  fomoTid           String?        // FomoPay Terminal ID (falls back to "10000001" if not set)
  airwallexTid      String?        // Airwallex account identifier (for audit trail)
  zeroSalesAlert    Boolean        @default(false) // Enable zero sales monitoring for this device

  @@index([deviceId])
  @@index([driverId])
}

// Junction table for Device <-> Driver many-to-many relationship
model DeviceDriver {
  id        String   @id @default(cuid())
  deviceId  String
  userId    String
  createdAt DateTime @default(now())
  device    Device   @relation(fields: [deviceId], references: [deviceId], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([deviceId, userId])
  @@index([deviceId])
  @@index([userId])
}

model Stock {
  id                  String    @id @default(cuid())
  deviceId            String    @unique
  deviceName          String
  quantity            Int       @default(0)
  updatedAt           DateTime  @updatedAt
  createdAt           DateTime  @default(now())
  alertLevel          String?
  lastAlertAt         DateTime?
  maxStock            Int       @default(80)
  minStockThreshold   Int       @default(20) // Low stock alert threshold (in sticks)
  lastSaleAt          DateTime?
  isLowStock          Boolean   @default(false)
  lowStockTriggeredAt DateTime?
  priority            Int       @default(1)
  reminderResetDate   DateTime?
  remindersTodayCount Int       @default(0)

  @@index([deviceId])
}

model Order {
  id                String    @id @default(cuid())
  orderId           String
  deviceId          String
  deviceName        String
  amount            Int
  quantity          Int       @default(1)
  payWay            Int?
  isSuccess         Boolean   @default(true)
  createdAt         DateTime  @default(now())
  orderTime         DateTime? // Original order timestamp from device
  deliverCount      Int?
  payAmount         Int?
  refundAmount      Int?
  totalCount        Int?
  fomoTransactionId String? // FomoPay reference number (Field 37)
  fomoStan          String? // FomoPay STAN
  fomoTid           String? // FomoPay Terminal ID used for this order (audit trail)
  airwallexTid      String? // Airwallex payment ID used for this order (audit trail)

  @@index([deviceId, createdAt])
  @@index([deviceId, orderTime])
  @@index([createdAt])
  @@index([orderTime])
  @@index([isSuccess])
}

// Duplicate table for imported CSV data
model OrderImport {
  id           String   @id @default(cuid())
  orderId      String
  deviceId     String
  deviceName   String
  amount       Int
  quantity     Int      @default(1)
  payWay       String?
  isSuccess    Boolean  @default(true)
  createdAt    DateTime @default(now())
  deliverCount Int?
  payAmount    Int?
  refundAmount Int?
  totalCount   Int?

  @@index([deviceId, createdAt])
  @@index([createdAt])
  @@index([isSuccess])
  @@index([orderId])
}

model StockHistory {
  id          String   @id @default(cuid())
  deviceId    String
  deviceName  String
  previousQty Int
  newQty      Int
  change      Int
  reason      String
  createdAt   DateTime @default(now())

  @@index([deviceId, createdAt])
}

model Storage {
  id         String   @id @default(cuid())
  deviceId   String   @unique
  deviceName String
  quantity   Int      @default(0)
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@index([deviceId])
}

model StorageHistory {
  id          String   @id @default(cuid())
  deviceId    String
  deviceName  String
  previousQty Int
  newQty      Int
  change      Int
  reason      String
  createdAt   DateTime @default(now())

  @@index([deviceId, createdAt])
}

model StockPrediction {
  id              String   @id @default(cuid())
  predictDate     DateTime @db.Date
  totalPredicted  Int
  totalActual     Int?
  stockLeft       Int?
  machines        Int
  perMachineData  Json?
  createdAt       DateTime @default(now())

  @@unique([predictDate])
  @@index([predictDate])
}

model Issue {
  id                  String      @id @default(cuid())
  deviceId            String
  deviceName          String
  type                IssueType
  faultCode           String?
  faultName           String?
  orderId             String?
  timeBlock           String?
  triggeredAt         DateTime    @default(now())
  respondedAt         DateTime?
  resolvedAt          DateTime?
  responseTimeMs      Int?
  resolutionTimeMs    Int?
  status              IssueStatus @default(OPEN)
  resolution          String?
  lastReminderAt      DateTime?
  reminderCount       Int         @default(0)
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  priority            Int         @default(1)
  reminderResetDate   DateTime?
  remindersTodayCount Int         @default(0)
  stockMax            Int?
  stockQuantity       Int?

  @@index([deviceId, status])
  @@index([type, status])
  @@index([triggeredAt])
  @@index([status, lastReminderAt])
}

model LocationHistory {
  id         String    @id @default(cuid())
  deviceId   String
  location   String
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
  durationMs Int?

  @@index([deviceId, startedAt])
}

model MaintenanceActivity {
  id           String    @id @default(cuid())
  deviceId     String
  deviceName   String
  activityType String
  startedAt    DateTime
  completedAt  DateTime?
  durationMs   Int?
  status       String
  notes        String?
  createdAt    DateTime  @default(now())

  @@index([deviceId, activityType])
  @@index([createdAt])
}

model Temperature {
  id                String   @id @default(cuid())
  deviceId          String
  deviceName        String
  refrigerationTemp Float
  machineTemp       Float
  createdAt         DateTime @default(now())

  @@index([deviceId, createdAt])
}

model TemperatureAlert {
  id             String    @id @default(cuid())
  deviceId       String
  deviceName     String
  currentTemp1   Float
  currentTemp2   Float
  initialTemp1   Float
  initialTemp2   Float
  reason         String
  alertType      String
  status         String    @default("OPEN")
  acknowledgedAt DateTime?
  resolvedAt     DateTime?
  createdAt      DateTime  @default(now())

  @@index([deviceId, status])
  @@index([createdAt])
}

model User {
  id           String    @id @default(cuid())
  clerkId      String    @unique
  firstName    String?
  lastName     String?
  role         UserRole  @default(FRANCHISEE) // Legacy single role (kept for backward compatibility)
  phone        String?
  imageUrl     String?
  isActive     Boolean   @default(true)
  lastSignInAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  loginPin     String?
  username     String    @unique
  groupId      String?
  group        Group?    @relation(fields: [groupId], references: [id])

  // Ops Manager relationship (for drivers)
  opsManagerId    String?
  opsManager      User?    @relation("OpsManagerDrivers", fields: [opsManagerId], references: [id])
  assignedDrivers User[]   @relation("OpsManagerDrivers")

  // Device assignments (many-to-many)
  assignedDevices DeviceDriver[]

  // Multiple roles (many-to-many)
  roles UserRoleAssignment[]

  @@index([clerkId])
  @@index([username])
  @@index([role])
  @@index([loginPin])
  @@index([groupId])
  @@index([opsManagerId])
}

// Junction table for User <-> Role many-to-many relationship
model UserRoleAssignment {
  id        String   @id @default(cuid())
  userId    String
  role      UserRole
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
  @@index([userId])
  @@index([role])
}

model PushSubscription {
  id        String   @id @default(cuid())
  clerkId   String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
}

model ScheduledOta {
  id          String    @id @default(cuid())
  devices     String[]
  scheduledAt DateTime
  status      OtaStatus @default(SCHEDULED)
  triggeredAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  notes       String?

  @@index([status, scheduledAt])
}

model OtaConfig {
  id               String   @id @default("singleton")
  version          String   @default("1.0.0")
  versionCode      Int      @default(1)
  apkUrl           String   @default("https://sugarcane-backend-five.vercel.app/api/app/download")
  releaseNotes     String   @default("Initial release")
  forceUpdate      Boolean  @default(false)
  triggerUpdate    String[] @default([])
  triggerTimestamp BigInt?
  updatedAt        DateTime @updatedAt
}

enum SubscriberRole {
  ADMIN
  OPSMANAGER
  DAYOPS
  NIGHTOPS
}

enum IssueType {
  DEVICE_ERROR
  ZERO_SALES
}

enum IssueStatus {
  OPEN
  CHECKING
  RESOLVED
  UNRESOLVED
  MACHINE_OK
}

// New Incident System (replaces Issue for new workflow)
enum IncidentType {
  ERROR_NOTIFICATION // Machine-generated errors (current DEVICE_ERROR)
  OUT_OF_STOCK // Stock = 0
  LOW_STOCK // Stock below threshold but > 0
  ZERO_SALES // No movement alerts
  CLEANING_COMPLIANCE // Cleaning & maintenance non-compliance
  MANUAL_ERROR // Manual/Unknown/System-related
}

enum IncidentStatus {
  OPEN
  ACKNOWLEDGED
  IN_PROGRESS
  RESOLVED
}

enum SlaOutcome {
  PENDING
  WITHIN_SLA
  SLA_BREACHED
}

enum TemperatureAlertType {
  TEMPERATURE_RISING
  THRESHOLD_EXCEEDED
}

enum TemperatureAlertStatus {
  OPEN
  ACKNOWLEDGED
  RESOLVED
}

enum UserRole {
  ADMIN
  MANAGER
  OPS_MANAGER
  FRANCHISEE
  DRIVER
  FINANCE
  PARTNERSHIPS
  ADMINOPS
}

enum OtaStatus {
  SCHEDULED
  TRIGGERED
  CANCELLED
}

model FomoPayTransaction {
  id          String   @id @default(cuid())
  deviceId    String
  stan        String
  reference   String? // FomoPay reference (Field 37), set when payment succeeds
  amount      Int // Amount in cents
  scheme      String? // PAYNOW, ALIPAY, WECHATPAY, GRABPAY
  status      String   @default("pending") // pending, completed, failed, voided
  tid         String? // Terminal ID used
  linkedOrder Boolean  @default(false) // Whether this has been linked to an Order
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([deviceId, createdAt])
  @@index([stan])
  @@index([deviceId, status])
}

model SalesPrediction {
  id             String   @id @default(cuid())
  predictionDate DateTime @unique // The date being predicted
  predictedSales Float // Predicted total sales
  actualSales    Int? // Filled in after the day passes
  rollingMean7   Float? // 7-day rolling average used
  rollingMean14  Float? // 14-day rolling average used
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([predictionDate])
}

// New Incident model - unified incident lifecycle with SLA tracking
model Incident {
  id         String       @id @default(cuid())
  type       IncidentType
  deviceId   String
  deviceName String

  // Assignment
  assignedOpsId    String?
  assignedDriverId String?

  // Timing & SLA
  startTime      DateTime  @default(now())
  acknowledgedAt DateTime?
  inProgressAt   DateTime?
  resolvedAt     DateTime?
  slaDeadline    DateTime? // startTime + 3 hours

  // Status
  status      IncidentStatus @default(OPEN)
  slaOutcome  SlaOutcome?    // null = no SLA (device has no assigned driver)
  penaltyFlag Boolean        @default(false)

  // Resolution
  resolution         String?
  resolutionCategory String? // For zero sales dropdown

  // Metadata
  faultCode     String?
  faultName     String?
  timeBlock     String?
  stockQuantity Int?

  // Reminder tracking
  lastReminderAt DateTime?
  reminderCount  Int       @default(0)
  escalatedAt    DateTime?

  // Audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([deviceId, status])
  @@index([type, status])
  @@index([startTime])
  @@index([status, slaOutcome])
  @@index([slaDeadline])
}

// Penalty tracking for SLA breaches
model Penalty {
  id           String   @id @default(cuid())
  incidentId   String
  reason       String
  appealStatus String   @default("none") // none, pending, approved, rejected
  appealNotes  String?  // Notes from the person submitting the appeal
  adminRemarks String?  // Remarks from admin when approving/rejecting
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // Note: amount field to be added later when penalty amounts are defined

  @@index([incidentId])
  @@index([appealStatus])
}

// Cleaning compliance tracking
model CleaningLog {
  id         String   @id @default(cuid())
  deviceId   String
  deviceName String
  userId     String?
  userName   String
  loggedAt   DateTime @default(now())
  month      Int
  year       Int

  @@index([deviceId, month, year])
  @@index([loggedAt])
}

// Zero sales staging - tracks devices in escalation stages before becoming incidents
model ZeroSalesStaging {
  id            String    @id @default(cuid())
  deviceId      String    @unique
  deviceName    String
  timeBlock     String
  stage         Int       @default(0) // 0: initial, 1: 30min, 2: 60min (escalated to incident)
  startedAt     DateTime  @default(now())
  lastCheckedAt DateTime  @default(now())
  notifiedAt    DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([deviceId])
  @@index([stage])
}

// Pending device registrations - tracks unknown hardware IDs that need to be paired
model PendingDeviceRegistration {
  id           String    @id @default(cuid())
  hardwareId   String    @unique // Build.SERIAL from Android device
  notifiedAt   DateTime? // When notification was sent
  registeredAt DateTime? // When hardware was paired with a device
  deviceId     String?   // The device ID it was paired with (once registered)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([hardwareId])
}
