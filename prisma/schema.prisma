generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id        String          @id @default(cuid())
  chatId    String          @unique
  username  String?
  firstName String?
  lastName  String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  role      SubscriberRole?

  @@index([chatId])
  @@index([role])
}

model PendingVerification {
  id        String   @id @default(cuid())
  chatId    String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([chatId])
}

model NotificationLog {
  id         String   @id @default(cuid())
  type       String
  deviceId   String?
  deviceName String?
  message    String
  recipients Int
  createdAt  DateTime @default(now())

  @@index([type, createdAt])
}

model MaintenanceLogin {
  id         String   @id @default(cuid())
  deviceId   String
  deviceName String
  userId     String?
  userName   String
  pin        String?
  loginType  String
  createdAt  DateTime @default(now())

  @@index([deviceId, createdAt])
  @@index([userId])
  @@index([createdAt])
}

model Group {
  id        String        @id @default(cuid())
  name      String        @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  devices   DeviceGroup[]
  users     User[]
}

model DeviceGroup {
  id        String   @id @default(cuid())
  deviceId  String
  groupId   String
  createdAt DateTime @default(now())
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([deviceId, groupId])
  @@index([deviceId])
  @@index([groupId])
}

model Device {
  id                String        @id @default(cuid())
  deviceId          String        @unique
  deviceName        String
  price             Int
  isActive          Boolean       @default(false)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  location          String?
  driverId          String?
  machineTemp       Float?
  refrigerationTemp Float?
  tempUpdatedAt     DateTime?
  gpsUpdatedAt      DateTime?
  latitude          Float?
  longitude         Float?
  groups            DeviceGroup[]
  terminalId        String?          // Terminal ID assigned to this device
  tid               String?          // TID for payment terminal
  appVersion        String?          // App version name (e.g., "3.2")
  appVersionCode    Int?             // App version code (e.g., 186777)
  versionUpdatedAt  DateTime?        // When version was last reported
  fomoTid           String?          // FomoPay Terminal ID (falls back to "10000001" if not set)

  @@index([deviceId])
  @@index([driverId])
}

model Stock {
  id                  String    @id @default(cuid())
  deviceId            String    @unique
  deviceName          String
  quantity            Int       @default(0)
  updatedAt           DateTime  @updatedAt
  createdAt           DateTime  @default(now())
  alertLevel          String?
  lastAlertAt         DateTime?
  maxStock            Int       @default(80)
  lastSaleAt          DateTime?
  isLowStock          Boolean   @default(false)
  lowStockTriggeredAt DateTime?
  priority            Int       @default(1)
  reminderResetDate   DateTime?
  remindersTodayCount Int       @default(0)

  @@index([deviceId])
}

model Order {
  id           String   @id @default(cuid())
  orderId      String
  deviceId     String
  deviceName   String
  amount       Int
  quantity     Int      @default(1)
  payWay       Int?
  isSuccess    Boolean  @default(true)
  createdAt    DateTime @default(now())
  orderTime    DateTime?  // Original order timestamp from device
  deliverCount Int?
  payAmount    Int?
  refundAmount Int?
  totalCount   Int?

  @@index([deviceId, createdAt])
  @@index([deviceId, orderTime])
  @@index([createdAt])
  @@index([orderTime])
  @@index([isSuccess])
}

// Duplicate table for imported CSV data
model OrderImport {
  id           String   @id @default(cuid())
  orderId      String
  deviceId     String
  deviceName   String
  amount       Int
  quantity     Int      @default(1)
  payWay       String?
  isSuccess    Boolean  @default(true)
  createdAt    DateTime @default(now())
  deliverCount Int?
  payAmount    Int?
  refundAmount Int?
  totalCount   Int?

  @@index([deviceId, createdAt])
  @@index([createdAt])
  @@index([isSuccess])
  @@index([orderId])
}

model StockHistory {
  id          String   @id @default(cuid())
  deviceId    String
  deviceName  String
  previousQty Int
  newQty      Int
  change      Int
  reason      String
  createdAt   DateTime @default(now())

  @@index([deviceId, createdAt])
}

model Storage {
  id         String   @id @default(cuid())
  deviceId   String   @unique
  deviceName String
  quantity   Int      @default(0)
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@index([deviceId])
}

model StorageHistory {
  id          String   @id @default(cuid())
  deviceId    String
  deviceName  String
  previousQty Int
  newQty      Int
  change      Int
  reason      String
  createdAt   DateTime @default(now())

  @@index([deviceId, createdAt])
}

model Issue {
  id                  String      @id @default(cuid())
  deviceId            String
  deviceName          String
  type                IssueType
  faultCode           String?
  faultName           String?
  orderId             String?
  timeBlock           String?
  triggeredAt         DateTime    @default(now())
  respondedAt         DateTime?
  resolvedAt          DateTime?
  responseTimeMs      Int?
  resolutionTimeMs    Int?
  status              IssueStatus @default(OPEN)
  resolution          String?
  lastReminderAt      DateTime?
  reminderCount       Int         @default(0)
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  priority            Int         @default(1)
  reminderResetDate   DateTime?
  remindersTodayCount Int         @default(0)
  stockMax            Int?
  stockQuantity       Int?

  @@index([deviceId, status])
  @@index([type, status])
  @@index([triggeredAt])
  @@index([status, lastReminderAt])
}

model LocationHistory {
  id         String    @id @default(cuid())
  deviceId   String
  location   String
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
  durationMs Int?

  @@index([deviceId, startedAt])
}

model MaintenanceActivity {
  id           String    @id @default(cuid())
  deviceId     String
  deviceName   String
  activityType String
  startedAt    DateTime
  completedAt  DateTime?
  durationMs   Int?
  status       String
  notes        String?
  createdAt    DateTime  @default(now())

  @@index([deviceId, activityType])
  @@index([createdAt])
}

model Temperature {
  id                String   @id @default(cuid())
  deviceId          String
  deviceName        String
  refrigerationTemp Float
  machineTemp       Float
  createdAt         DateTime @default(now())

  @@index([deviceId, createdAt])
}

model TemperatureAlert {
  id             String    @id @default(cuid())
  deviceId       String
  deviceName     String
  currentTemp1   Float
  currentTemp2   Float
  initialTemp1   Float
  initialTemp2   Float
  reason         String
  alertType      String
  status         String    @default("OPEN")
  acknowledgedAt DateTime?
  resolvedAt     DateTime?
  createdAt      DateTime  @default(now())

  @@index([deviceId, status])
  @@index([createdAt])
}

model User {
  id           String    @id @default(cuid())
  clerkId      String    @unique
  firstName    String?
  lastName     String?
  role         UserRole  @default(FRANCHISEE)
  phone        String?
  imageUrl     String?
  isActive     Boolean   @default(true)
  lastSignInAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  loginPin     String?
  username     String    @unique
  groupId      String?
  group        Group?    @relation(fields: [groupId], references: [id])

  @@index([clerkId])
  @@index([username])
  @@index([role])
  @@index([loginPin])
  @@index([groupId])
}

model PushSubscription {
  id        String   @id @default(cuid())
  clerkId   String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
}

model ScheduledOta {
  id          String    @id @default(cuid())
  devices     String[]
  scheduledAt DateTime
  status      OtaStatus @default(SCHEDULED)
  triggeredAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  notes       String?

  @@index([status, scheduledAt])
}

model OtaConfig {
  id               String   @id @default("singleton")
  version          String   @default("1.0.0")
  versionCode      Int      @default(1)
  apkUrl           String   @default("https://sugarcane-backend-five.vercel.app/api/app/download")
  releaseNotes     String   @default("Initial release")
  forceUpdate      Boolean  @default(false)
  triggerUpdate    String[] @default([])
  triggerTimestamp BigInt?
  updatedAt        DateTime @updatedAt
}

enum SubscriberRole {
  ADMIN
  OPSMANAGER
  DAYOPS
  NIGHTOPS
}

enum IssueType {
  DEVICE_ERROR
  ZERO_SALES
}

enum IssueStatus {
  OPEN
  CHECKING
  RESOLVED
  UNRESOLVED
  MACHINE_OK
}

enum TemperatureAlertType {
  TEMPERATURE_RISING
  THRESHOLD_EXCEEDED
}

enum TemperatureAlertStatus {
  OPEN
  ACKNOWLEDGED
  RESOLVED
}

enum UserRole {
  ADMIN
  MANAGER
  FRANCHISEE
  DRIVER
  FINANCE
  PARTNERSHIPS
  ADMINOPS
}

enum OtaStatus {
  SCHEDULED
  TRIGGERED
  CANCELLED
}

model SalesPrediction {
  id              String   @id @default(cuid())
  predictionDate  DateTime @unique // The date being predicted
  predictedSales  Float    // Predicted total sales
  actualSales     Int?     // Filled in after the day passes
  rollingMean7    Float?   // 7-day rolling average used
  rollingMean14   Float?   // 14-day rolling average used
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([predictionDate])
}
